.aside_wrap
	margin-top 2em
	display flex
	flex-flow column
	align-items center
	width 11em
	margin-left auto
	margin-right auto
	left 0
	right 0
	color white
	.patient_img
		background white
		width 10em
		height 10em
		border-radius 10em
		display flex
		justify-content center
		align-items center
	.item-list
		margin-top 2em
		width 80%
		.item
			font-size 0.8em
			margin-bottom 1em
			display flex
			flex-flow column
			span:nth-child(1)
				font-weight bold
				text-transform uppercase
				border-bottom solid 1px lightgray
			