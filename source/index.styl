$salutis1= #7D7D7D
$salutis2= #D8D8D8
$salutis3= #00B0B3 // verde
$salutis4= #F6F5F5 // gray fondo
$salutis5= #A9FCE9

$aside-width= 12em
$nav-height = 5em
body
	max-heigt 100vh
	font-family 'Kozuka Gothic Pr6N'
	.wrap 
		display flex
		
.section-wrap
	background $salutis4
	height 100vh
	display flex
	flex-flow column
	nav
		background $salutis2
		height $nav-height
		display flex
		.logo-image
			width $aside-width
			align-items center
			justify-content center
			display flex
			img
				width 80%
		.nav-info
			flex-grow 2
			display flex
			align-items center
			justify-content center
			font-size 2.4em
			color $salutis3
			font-weight bold
		.nav-selectors
			display flex
			align-items center
			div
				margin-left 1em
				margin-right 1em
	.container
		height 100%
		display flex
		aside
			background $salutis1
			width $aside-width
			// padding 2em
		main 
			max-height 100%
			flex-grow 2
			display flex
			flex-flow column
			.main__wrap
				width 100%
				flex-grow 2
				display flex
				flex-flow column
				.icon-tab
					height 3em
					padding 0.7em
				.section
					flex-grow 2
					display flex
			.main__footer
				background-color $salutis3
@import './components/main_consulta'
@import './components/aside'
@import './components/tabicons'
@import './components/footer'



				
				
			
			
		
			
			

